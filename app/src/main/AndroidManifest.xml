<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.myapplication">

    <application
        android:allowBackup="true"
        android:icon="@drawable/your_image_file_name"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Define your activities here -->
        <activity
            android:name=".IEEE754"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".RootFindingActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>
        <activity
            android:name=".Convert32BitActivity"
            android:label="Convert32BitActivity"
            android:parentActivityName=".IEEE754">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".IEEE754" />
        </activity>
        <activity
            android:name=".Convert64BitActivity"
            android:label="Convert64BitActivity"
            android:parentActivityName=".IEEE754">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".IEEE754" />
        </activity>
        <activity
            android:name=".BisectionActivity"
            android:label="Bisection Activity"
            android:parentActivityName=".RootFindingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootFindingActivity" />
        </activity>
        <activity
            android:name=".FalsePositionActivity"
            android:label="False Position Activity"
            android:parentActivityName=".RootFindingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootFindingActivity" />
        </activity>
        <activity
            android:name=".TangentActivity"
            android:label="Tangent Activity"
            android:parentActivityName=".RootFindingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootFindingActivity" />
        </activity>
        <activity
            android:name=".SecantActivity"
            android:label="Secant Activity"
            android:parentActivityName=".RootFindingActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".RootFindingActivity" />
        </activity>

        <activity
            android:name=".JacobiActivity"
            android:label="JacobiActivity"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

    </application>

</manifest>

